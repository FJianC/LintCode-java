public class Solution {
    public String addBinary(String a, String b) {
        int aL = a.length() - 1;
        int bL = b.length() - 1;
        String result = "";
        int sum = 0;
        while (aL >= 0 || bL >= 0) {
            if (aL >= 0) {
                sum += Integer.parseInt(a.substring(aL, aL + 1));
                aL--;
            }
            if (bL >= 0) {
                sum += Integer.parseInt(b.substring(bL, bL + 1));
                bL--;
            }
            if (sum == 2) {
                result = "0" + result;
                sum = 1;
            } else if (sum == 0 || sum == 1) {
                result = sum + "" + result;
                sum = 0;
            } else if (sum == 3) {
                result = "1" + result;
                sum = 1;
            }
        }
        if (sum == 1) {
            result = "1" + result;
        }
        return result;
    }
};
